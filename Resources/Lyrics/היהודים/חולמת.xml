      <lg type="song lyrics">
        <head>חולמת</head>
        <lg number="1" type="stanza">
          <l>חולמת </l>
          <l>מנסה לצחוק</l>
          <l>נרדמת</l>
          <l>מקווה למחוק</l>
          <l>נעלמת</l>
          <l>בעולם רחוק</l>
        </lg>
        <lg number="2" type="stanza">
          <l>צוללת</l>
          <l>ורואה את הסוף</l>
          <l>מתעוררת</l>
          <l>בפינת רחוב</l>
          <l>ממלמלת</l>
          <l>עוד מעט קרוב</l>
        </lg>
        <lg Chorus="yes" number="3" type="stanza">
          <l>אין לי כח</l>
          <l>אין לי עוד</l>
          <l>תן לי כח</l>
          <l>תן לי עוד</l>
        </lg>
        <lg number="4" type="stanza">
          <l>כועסת</l>
          <l>לא נכנעת</l>
          <l>מוותרת</l>
          <l>משתכנעת</l>
          <l>נעלבת</l>
          <l>כמו ילדה קטנה</l>
        </lg>
        <lg number="5" type="stanza">
          <l>מדמיינת</l>
          <l>עפה לי מכאן</l>
          <l>מרחפת</l>
          <l>על ענן לבן</l>
          <l>עד לנצח</l>
          <l>עד לקצה הזמן</l>
        </lg>
        <lg Chorus="yes" number="6" type="stanza">
          <l>אין לי כח</l>
          <l>אין לי עוד</l>
          <l>תן לי כח</l>
          <l>תן לי עוד</l>
        </lg>
      </lg>
