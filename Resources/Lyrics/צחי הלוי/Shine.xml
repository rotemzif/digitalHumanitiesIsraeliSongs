      <lg type="song lyrics">
        <head>Shine</head>
        <lg Chorus="yes" number="1" type="stanza">
          <l>let it shine </l>
          <l>shine on me shine on you </l>
          <l>shine on us shine on </l>
        </lg>
        <lg number="2" type="stanza">
          <l>once again </l>
          <l>thinking 'bout a change </l>
          <l>once again </l>
          <l>having to rearrange </l>
          <l>keep the faith you say to me </l>
          <l>harmony and ryhme will be </l>
          <l>if you just keep on trying </l>
          <l>happiness you'll know </l>
          <l>time to feed your soul </l>
        </lg>
        <lg Chorus="yes" number="3" type="stanza">
          <l>let it shine... </l>
        </lg>
        <lg number="4" type="stanza">
          <l>it all may seem so weird </l>
          <l>talking 'bout things not so clear </l>
          <l>so let me put things straight </l>
          <l>open up your mind dig this </l>
          <l>humanity equality serenity </l>
          <l>the power of the mind </l>
        </lg>
        <lg number="5" type="stanza">
          <l>mercy mercy mercy me </l>
          <l>may all these keep on shining </l>
          <l>mercy mercy mercy me </l>
          <l>on the ignorance and pride </l>
        </lg>
        <lg number="6" type="stanza">
          <l>mercy mercy mercy me </l>
          <l>let me live this fantasy </l>
        </lg>
        <lg Chorus="yes" number="7" type="stanza">
          <l>let it shine...</l>
        </lg>
      </lg>
