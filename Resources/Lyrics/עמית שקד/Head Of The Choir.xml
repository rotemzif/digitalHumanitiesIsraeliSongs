  <text>
    <body>
      <lg type="song lyrics">
        <head>Head Of The Choir</head>
        <lg number="1" type="stanza">
          <l>It's about time                                 </l>
          <l>For us to shine                                  </l>
          <l>Line up take a bow                          </l>
          <l>Wait for your sign                            </l>
        </lg>
        <lg number="2" type="stanza">
          <l>Pay up and walk                         </l>
          <l>Dance your way out                        </l>
          <l>You are best heard                       </l>
          <l>When you don't shout                        </l>
        </lg>
        <lg Chorus="yes" number="3" type="stanza">
          <l>In this great rain                                    </l>
          <l>I am plain                                            </l>
          <l>It is under my skin in my bones       </l>
          <l>My old town                                 </l>
          <l>Won't be found                                    </l>
          <l>It is under the heaviest stones             </l>
        </lg>
        <lg number="4" type="stanza">
          <l>I won't let go                                     </l>
          <l>Of the thick wire                            </l>
          <l>Break me make me                       </l>
          <l>Head of the choir                               </l>
        </lg>
        <lg Chorus="yes" number="5" type="stanza">
          <l>In this great rain                                   </l>
          <l>I am plain                                            </l>
          <l>It is under my skin in my bones       </l>
          <l>My old town                                 </l>
          <l>Won't be found                                    </l>
          <l>It is under the heaviest stones</l>
        </lg>
      </lg>
