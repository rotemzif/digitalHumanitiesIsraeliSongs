        <lg number="1" type="stanza">
          <l>טל</l>
          <l>על כל עלעל</l>
          <l>את - אגל טל</l>
          <l>קרן אור, רוח קל.</l>
        </lg>
        <lg number="2" type="stanza">
          <l>טל</l>
          <l>פרפר לבן</l>
          <l>את - שדה וגן</l>
          <l>שיר ציפור, מעין.</l>
        </lg>
        <lg number="3" type="stanza">
          <l>טל</l>
          <l>צליל ענבל</l>
          <l>סומק קל</l>
          <l>ריח גל</l>
          <l>טל</l>
          <l>רז נפתל</l>
          <l>פז מוטל</l>
          <l>זהב תלתל.</l>
        </lg>
        <lg number="4" type="stanza">
          <l>טל</l>
          <l>כוכב נפל</l>
          <l>לי - בקש אשאל</l>
          <l>חלום צלול, זך כמו טל.</l>
        </lg>
