  <text>
    <body>
      <lg type="song lyrics">
        <head>Good Night Child</head>
        <lg number="1" type="stanza">
          <l>Good night child </l>
          <l>I'm here by your side </l>
          <l>close your eyes </l>
          <l>to a soft lullaby </l>
        </lg>
        <lg Chorus="yes" number="2" type="stanza">
          <l>good night child </l>
          <l>good night child </l>
        </lg>
        <lg number="3" type="stanza">
          <l>I will turn off the light </l>
          <l>don't be afraid of the dark </l>
          <l>I will let in the moon light </l>
          <l>to bring the darkness apart </l>
        </lg>
        <lg Chorus="yes" number="4" type="stanza">
          <l>good night child </l>
          <l>good night child </l>
        </lg>
        <lg number="5" type="stanza">
          <l>no need to cry child </l>
          <l>don't be afraid </l>
          <l>no demos or monsters </l>
          <l>crawling under your bed </l>
          <l>sleeping tight </l>
          <l>good night child </l>
        </lg>
        <lg number="6" type="stanza">
          <l>imagine the things </l>
          <l>that you really want </l>
          <l>let soft sweet dreams take you </l>
          <l>and all the demons be gone </l>
        </lg>
        <lg Chorus="yes" number="7" type="stanza">
          <l>good night child </l>
          <l>good night child </l>
        </lg>
        <lg number="8" type="stanza">
          <l>no need to cry child </l>
          <l>don't be afraid </l>
          <l>no demos or monsters </l>
          <l>crawling under your bed </l>
          <l>sleeping tight </l>
          <l>good night child</l>
        </lg>
      </lg>
