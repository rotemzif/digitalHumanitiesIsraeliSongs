      <lg type="song lyrics">
        <head>Innocent</head>
        <lg number="1" type="stanza">
          <l>HASHAMAYIM NEVAKIM SADOT </l>
          <l>OONDUDE ADAM BEMILHAMOT </l>
          <l>GAAGUIM NIKRAIM </l>
          <l>MEEINE HAYLADIM HANIMLATIM </l>
          <l>VEEIN AV VAEM VERAHAMIM </l>
        </lg>
        <lg number="2" type="stanza">
          <l>השמיים נאבקים שדות </l>
          <l>ונדודי אדם במלחמות </l>
          <l>געגועים נקרעים </l>
          <l>מעיני הילדים הנמלטים </l>
          <l>ועיניו האל הרחמים </l>
        </lg>
        <lg Chorus="yes" number="3" type="stanza">
          <l>YA AHYA YA AHYA </l>
          <l>ASHAR AHYA ASHAR AHYA </l>
          <l>YA AHYA YA AHYA </l>
          <l>ASHAR AHYA ASHAR AHYA </l>
        </lg>
        <lg number="4" type="stanza">
          <l>YA FADAYTAK YA FADAIT </l>
          <l>ANA NIM ASHKI ALEIK </l>
          <l>LA LILI LEIL WALA NAHAR </l>
          <l>LA LILI LA LILI WALA NAHAR </l>
          <l>LA LILI LA LILI WALA NAHAR </l>
        </lg>
        <lg Chorus="yes" number="5" type="stanza">
